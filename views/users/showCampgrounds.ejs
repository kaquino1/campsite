<% layout('layouts/boilerplate') %>

<% if (campgrounds.length) { %>
  <div class='wrapper row my-5 justify-content-center'>
    <% for (let campground of campgrounds) { %>
      <div class='col-12 col-lg-6 col-xxl-4'>
      
        <div class='card mb-3 shadow'>
          <img src='<%= campground.images.length ? campground.images[0].url : 'https://images.unsplash.com/photo-1510672981848-a1c4f1cb5ccf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2372&q=80' %>' class='img-fluid'>

          <div class='card-body'>
            
            <h4 class='card-title'>
              <%= campground.title %>
            </h4>
            <h6 class='card-subtitle text-muted mb-3'>
              <%= campground.location %>
            </h6>
            <p class='card-text'>
              <%= campground.description %>
            </p>
            <a href='/campgrounds/<%= campground._id %>' class='btn btn-primary'>
              View <%= campground.title %>
            </a>

          </div>

          <div class='card-footer created-footer'>
            Created by <%= currentUser.username %>
          </div>

        </div>
      </div>
    <% } %>
  </div>

  <% if (pages > 1) { %>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        
        <% if (current == 1) { %>
          <li class='page-item disabled'><a class='page-link'>First</a></li>
        <% } else { %>
          <li class='page-item'><a href='/users/<%= currentUser._id %>/campgrounds/pages/1' class='page-link'>First</a></li>
        <% } %>
  
        <% let i = (current > 5 ? current - 4 : 1) %>
        <% if (i != 1) { %>
          <li class='page-item disabled'><a class='page-link'>...</a></li>
        <% } %>
  
        <% for (; i < current + 4 && i <= pages; i++) { %>
          <li class='page-item <%= i == current ? ' active' : '' %>'>
            <a class='page-link' href='/users/<%= currentUser._id %>/campgrounds/pages/<%= i %>'>
              <%= i %>
            </a>
          </li>
        <% } %>
  
        <% if (i == current + 4 && i < pages) { %>
          <li class='page-item disabled'><a class='page-link'>...</a></li>
        <% } %>
  
        <% if (current == pages) { %>
          <li class='page-item disabled'><a class='page-link'>Last</a></li>
        <% } else { %>
          <li class='page-item'>
            <a href='/users/<%= currentUser._id %>/campgrounds/pages/<%= pages %>' class='page-link'>Last</a></li>
        <% } %>
  
    </ul>
  </nav>
  <% } %>
<% } %>